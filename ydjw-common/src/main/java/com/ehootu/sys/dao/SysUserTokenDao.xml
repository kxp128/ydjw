<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ehootu.sys.dao.SysUserTokenDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.ehootu.sys.entity.SysUserTokenEntity" id="sysUserTokenMap">
        <result property="userId" column="user_id"/>
        <result property="token" column="token"/>
        <result property="expireTime" column="expire_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

	<select id="queryObject" resultType="com.ehootu.sys.entity.SysUserTokenEntity">
		select * from sys_user_token where user_id = #{value}
	</select>

	<select id="queryList" resultType="com.ehootu.sys.entity.SysUserTokenEntity">
		select * from sys_user_token
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by user_id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sys_user_token 
	</select>
	 
	<insert id="save" parameterType="com.ehootu.sys.entity.SysUserTokenEntity">
		insert into sys_user_token
		(
			`user_id`, 
			`token`, 
			`expire_time`, 
			`update_time`
		)
		values
		(
			#{userId}, 
			#{token}, 
			#{expireTime}, 
			#{updateTime}
		)
	</insert>
	 
	<update id="update" parameterType="com.ehootu.sys.entity.SysUserTokenEntity">
		update sys_user_token 
		<set>
			<if test="token != null">`token` = #{token}, </if>
			<if test="expireTime != null">`expire_time` = #{expireTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		where user_id = #{userId}
	</update>
	
	<delete id="delete">
		delete from sys_user_token where user_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sys_user_token where user_id in 
		<foreach item="userId" collection="array" open="(" separator="," close=")">
			#{userId}
		</foreach>
	</delete>

</mapper>